{
    "mcp.autoStart": true,
    "chat.mcp.access": "all",
    "github.copilot.chat.virtualTools.threshold": 128,
    "github.copilot.chat.enableMcp": true,
    "github.copilot.chat.allowMcpPrompts": true,
    "github.copilot.chat.allowMcpResources": true,
    "github.gitAuthentication": true,
    "git.autofetch": true,
    "git.confirmSync": true,
    "github.authenticate": "on",
    "mcp.enableAllModels": true,
    "mcp.autoSelectModel": true,
    "mcp.modelPreference": "auto",
    "copilot.enable": {
        "*": true,
        "php": true,
        "javascript": true,
        "css": true,
        "scss": true,
        "json": true,
        "yaml": true,
        "python": false,
        "plaintext": false,
        "markdown": true
    },
    "github.copilot.enable": {
        "*": true,
        "php": true,
        "javascript": true,
        "css": true,
        "scss": true,
        "json": true,
        "yaml": true,
        "python": false,
        "plaintext": false,
        "markdown": true
    },
    "chat.modeFilesLocations": {
        "**/.github/chatmodes": true,
        "chatmodes": true
    },
    "chat.promptFilesLocations": {
        "**/.github/prompts": true,
        "prompts": true
    },
    "chat.instructionsFilesLocations": {
        "**/.github/instructions": true,
        "instructions": true
    },
    "chat.agentFilesLocations": {
        "**/.github/agents": true,
        ".github/agents": true
    },
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "editor.formatOnSave": true
    },
    "[php]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "editor.rulers": [100],
    "files.associations": {
        "*.chatmode.md": "markdown",
        "*.instructions.md": "markdown",
        "*.agent.md": "markdown",
        "*.prompt.md": "markdown"
    }
}
