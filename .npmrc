# Save exact versions in package.json (no ^ or ~ prefixes) for reproducible builds
save-exact=true

# Always generate package-lock.json for dependency locking
package-lock=true

# Disable funding messages during npm install to reduce noise
fund=false

# Enforce Node.js engine requirements specified in package.json
engine-strict=true

# Use highest resolution mode for dependency conflicts (commented out for deterministic installs)
# resolution-mode=highest
