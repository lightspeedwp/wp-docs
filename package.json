{
  "name": "wp-docs",
  "version": "1.0.0",
  "description": "WordPress documentation and Copilot assets for LightSpeed WordPress projects",
  "main": ".github/scripts/update-readme.js",
  "scripts": {
    "build": "node .github/scripts/update-readme.js",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "contributors:check": "all-contributors check",
    "lint": "npm run lint:md && npm run lint:js && npm run lint:css && npm run lint:agents",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:js": "eslint '**/*.js' --ignore-path .gitignore",
    "lint:css": "stylelint '**/*.{css,scss}' --ignore-path .gitignore",
    "lint:agents": "node scripts/lint-agents.js",
    "lint:fix": "npm run lint:md -- --fix && npm run lint:js -- --fix && npm run lint:css -- --fix && npm run format",
    "format": "prettier --write '**/*.{js,json,md,yml,yaml}' --ignore-path .gitignore",
    "format:check": "prettier --check '**/*.{js,json,md,yml,yaml}' --ignore-path .gitignore",
    "lang:en-gb": "node scripts/en-gb-normalise.js",
    "lang:en-gb:apply": "node scripts/en-gb-normalise.js --apply"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lightspeedwp/wp-docs.git"
  },
  "keywords": [
    "wordpress",
    "github",
    "copilot",
    "ai",
    "prompts",
    "instructions",
    "lightspeed",
    "documentation"
  ],
  "author": "LightSpeed WordPress",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "all-contributors-cli": "^6.26.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1"
  }
}
